    "    if len(faces) == 0:\n",
    "        pass\n",
    "    else:\n",
    "        for i in faces:\n",
    "            x1=i[0]\n",
    "            y1=i[1]\n",
    "            x2=x1+i[2]\n",
    "            y2=y1+i[3]\n",
    "            model_pic = cv2.rectangle(photo, (x1,y1),(x2,y2),[0,255,0],3)\n",
    "            \n",
    "            cv2.imshow(\"pic\",model_pic)\n",
    "            a+=1\n",
    "        if cv2.waitKey(10) == 13:\n",
